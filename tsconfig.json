{
    "compilerOptions": {
      "outDir": "./dist/",
      "module": "ESNext",
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": [
      "src/**/*.ts", 
      "src/scripts/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  